<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/green_grad"
            android:text="Manually Open A Specific Waste Bin"
            android:textAlignment="center"
            android:singleLine="false"
            android:minLines="1"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:background="@drawable/yellow_garbot"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:background="@drawable/green_garbot"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <Button
                    android:id="@+id/paper_btn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bin_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Paper"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <Button
                    android:id="@+id/compost_btn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bin_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Compost"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:background="@drawable/blue_garbot"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:background="@drawable/black_garbot"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <Button
                    android:id="@+id/recycling_btn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bin_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="plastic"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <Button
                    android:id="@+id/garbage_btn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bin_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Garbage"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="85dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">
                <View
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@color/hint_white">
                </View>
                <Button
                    android:id="@+id/minus_btn"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/minus">
                </Button>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@color/hint_white"
                    android:text="1"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <View
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@color/hint_white">
                </View>
                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/plus">
                </Button>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>